                    <edge>Yes</edge>
                    <node>GatherIngredients</node>
                </connection>
            </connections>
            <hostname>PummyAntyFoodShop</hostname>
        </node>

        <node>
            <name>GatherIngredients</name>
            <connections>
                <connection>
                    <edge>Yes</edge>
                    <node>CookFood</node>
                </connection>
            </connections>
            <hostname>PummyAntyFoodShop</hostname>
        </node>

        <node>
            <name>CookFood</name>
            <connections>
                <connection>
                    <edge>Yes</edge>
                    <node>NotifyClient</node>
                </connection>
            </connections>
            <hostname>PummyAntyFoodShop</hostname>
        </node>

        <node>
            <name>NotifyClient</name>
            <hostname>PummyAntyFoodShop</hostname>
        </node>

    </graph>

